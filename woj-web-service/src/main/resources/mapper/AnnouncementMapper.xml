<?xml version="1.0" encoding="UTF-8"?>
<!DOCTYPE mapper
        PUBLIC "-//mybatis.org//DTD Mapper 3.0//EN"
        "http://mybatis.org/dtd/mybatis-3-mapper.dtd">
<mapper namespace="com.chuan.wojwebservice.mapper.AnnouncementMapper">

    <resultMap id="BaseResultMap" type="com.chuan.wojmodel.pojo.entity.Announcement">
            <id property="id" column="id" jdbcType="BIGINT"/>
            <result property="title" column="title" jdbcType="VARCHAR"/>
            <result property="content" column="content" jdbcType="VARCHAR"/>
            <result property="createtime" column="createTime" jdbcType="TIMESTAMP"/>
            <result property="updatetime" column="updateTime" jdbcType="TIMESTAMP"/>
    </resultMap>

    <sql id="Base_Column_List">
        id,title,content,
        createTime,updateTime
    </sql>
    <select id="selectAnnouncementTitleList" resultType="com.chuan.wojmodel.pojo.vo.announcement.AnnouncementTitleVO">
        select id,title,createTime from `announcement` ORDER BY id DESC limit 4;
    </select>
    <select id="selectAnnouncementContentVO"
            resultType="com.chuan.wojmodel.pojo.vo.announcement.AnnouncementContentVO">
        select id,title,content,createTime from `announcement` where id =#{id};
    </select>
</mapper>
